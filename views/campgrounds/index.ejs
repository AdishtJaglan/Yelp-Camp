<% layout("layouts/boilerplate") %>

    <h1>All Campgrounds</h1>
    <div>
        <a href="/campground/new">Create</a>
    </div>
    <ul>
        <% for(let campground of campgrounds){ %>
            <li>
                <%= campground.title %>:
                <%= campground.location %>
                <a href="/campground/<%= campground._id %>"><b>details</b></a>
            </li>
            <br>
        <% } %>
    </ul>